{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "declarationDir": "./types",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "outDir": "./src",
    "rootDir": "./ts-src",
    "strict": true,
    "target": "es6",
    "types": [
      "@types/mocha",
      "node"
    ]
  },
  "include": [
    "ts-src/**/*.ts"
  ],
  "exclude": [
    "ts-src/test-utils",
    "**/*.spec.ts",
    "**/*.test.ts",
    "node_modules/**/*"
  ]
}
